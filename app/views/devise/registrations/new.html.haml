= render 'devise/partials/logo'
.container
  .row
    .col-xs-12.col-md-6.offset-md-3.col-lg-6.form-container-parent
      .card
        .card-block
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = f.input :email, label: 'Correo electrónico', type: :email, autofocus: true
            - if @minimum_password_length
              = f.input :password, label: "Contraseña (#{@minimum_password_length} caracteres mínimos)", type: :password, autocomplete: 'off'
            - else
              = f.input :password, label: 'Contraseña', type: :password, autocomplete: 'off'
            = f.input :password_confirmation, label: 'Confirme contraseña', type: :password, autocomplete: 'off'
            %hr
            = f.submit 'Registrar', class: 'btn btn-danger btn-block', data: {disable_with: 'Validando'}
          %hr
          = render 'devise/partials/links'
