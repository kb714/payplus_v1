= render 'partials/content_structure' do
  .card-block
    = simple_form_for @shop, url: shop_path(slug: @shop), :html => { :multipart => true } do |f|
      = f.input :name, label: 'Nombre de comercio'
      = f.input :description, label: 'Descripción', as: :text
      %label Seleccione una imagen (dejar en blanco para mantener)
      %br
      = f.file_field :image, as: :file
      %br
      %label Imagen actual:
      = image_tag @shop.image.url(:thumb)
      %hr
      = f.input :url, label: 'Dirección web del comercio'
      = f.input :notify_url, label: 'URL de notificaciones'
      = f.submit 'Editar Comercio', class: 'btn btn-danger btn-md'
      = link_to 'Cancelar', shop_path(slug: @shop), class: 'btn-flat'
